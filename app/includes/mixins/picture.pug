mixin picture(imgPath,title,addClass,showModal)
  picture(
    itemscope,
    itemtype='http://schema.org/ImageObject',
    class=`${addClass ? `${addClass}-picture` : ""}`) 
    source(
      srcset="img/preloader.gif", 
      data-lazy-srcset!=`${imgPath}`)
    img.img_full.img_center(
      src="img/preloader.gif",
      data-lazy-src!=`${imgPath}`, 
      alt!=`${title}`,
      title!=`${title}`,
      draggable="false",
      loading="lazy",
      class!=`${addClass ? `${addClass}-image` : ""} ${showModal ? showModal : ""} `)
